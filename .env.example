# Environment variables for Elyon Examination System

# Application Settings
VITE_APP_NAME="Elyon Examination"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Secure Online Examination System"

# Environment Configuration
NODE_ENV=development
VITE_ELECTRON=false
VITE_TAURI=false
VITE_API_URL=http://localhost:3000

# Development Server
VITE_DEV_SERVER_HOST=::
VITE_DEV_SERVER_PORT=8080
VITE_DEV_SERVER_HTTPS=false
VITE_DEV_SERVER_OPEN=true

# Build Configuration
VITE_SOURCEMAP=true
VITE_MINIFY=true
VITE_CHUNK_SIZE_WARNING_LIMIT=1000

# Supabase Configuration (if applicable)
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_UPDATE_CHECK=true

# Logging
VITE_LOG_LEVEL=warn
VITE_ENABLE_CONSOLE_LOGS=true
VITE_ENABLE_REDUX_LOGGER=false

# Performance
VITE_ENABLE_PROFILING=false
VITE_ENABLE_WEB_WORKER=false
